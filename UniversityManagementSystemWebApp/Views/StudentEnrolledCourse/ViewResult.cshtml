@model IEnumerable<UniversityManagementSystemWebApp.Models.UserDefinedModels.StudentEnrolledCourse>

@{
    ViewBag.Title = "ViewResult";
}

<h2>View Result</h2>

<p>
    @Html.ActionLink("Save Student Result", "SaveStudentResult")
</p>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("StudentId", "Student Reg No.", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("StudentId", null, "Select....", htmlAttributes: new {@class = "form-control", @onchange = @"form.submit();"})
            </div>
        </div>

        <div class="form-group">
            @Html.Label("StudentName", "Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("StudentName", (string)@ViewBag.StudentName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("StudentEmail", "Email", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("StudentEmail", (string)@ViewBag.StudentEmail, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("StudentDepartment", "Department", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.Editor("StudentDepartment", (string) @ViewBag.StudentDepartment, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Course Code")
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayName("Grade")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradeLetter)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EnrolledId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EnrolledId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EnrolledId })
        </td>
    </tr>
}

</table>
